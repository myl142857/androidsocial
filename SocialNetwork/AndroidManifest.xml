<?xml version="1.0" encoding="utf-8"?>
<manifest package="main.main"
      android:versionCode="1"
      android:versionName="1.0" xmlns:android="http://schemas.android.com/apk/res/android">
      
    <application android:icon="@drawable/icon"
    			 android:label="@string/app_name"
				 android:theme="@style/style_app"
				 android:name="ApplicationSocialNetwork"
				 android:debuggable="true"
				 android:screenOrientation="portrait"
				 android:configChanges="keyboardHidden|orientation">
    
        <activity android:name=".ActivityLogin"
				  android:label="@string/app_name"
				  android:screenOrientation="portrait"
				  android:configChanges="keyboardHidden|orientation">
				 <!-- android:launchMode="singleTask" > -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

		<activity android:name="ActivityUsersList"
				  android:label="@string/activity_label_users_list"
				  android:launchMode="singleTask"
				  android:screenOrientation="portrait"
				  android:configChanges="keyboardHidden|orientation">
		</activity>
		
		<activity android:name="ActivityUserDetails"
				  android:label="@string/activity_label_user_details"
				  android:launchMode="singleTask"
				  android:screenOrientation="portrait"
				  android:configChanges="keyboardHidden|orientation">
		</activity>
		
		<activity android:name="ActivityChat"
				  android:label="@string/app_name"
				  android:launchMode="singleTask"
				  android:screenOrientation="portrait"
				  android:configChanges="keyboardHidden|orientation">
		</activity>
		
		<activity android:name="ActivityFileBrowser"
				  android:label="@string/app_name"
				  android:launchMode="standard"
				  android:screenOrientation="portrait"
				  android:configChanges="keyboardHidden|orientation">
		</activity>

		<activity android:name="ActivityCreateUser"
				  android:label="@string/app_name"
				  android:launchMode="standard"
				  android:screenOrientation="portrait"
				  android:configChanges="keyboardHidden|orientation">
		</activity>
				
	</application>

    <uses-sdk android:minSdkVersion="3"/>

	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
	<uses-permission android:name="android.permission.CHANGE_WIFI_STATE"></uses-permission>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>     
</manifest> 