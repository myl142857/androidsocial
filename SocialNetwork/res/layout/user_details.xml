<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="fill_parent">

	<LinearLayout
		android:id="@+id/LinearLayoutPictureAndMainDetails"
		android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent">
		
		<TextView android:id="@+id/TextViewMainDetails" android:text="@+id/TextViewMainDetails" android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="fill_parent">
		</TextView><ImageView android:id="@+id/ImageViewUserPicture" android:layout_height="@dimen/image_size" android:layout_width="@dimen/image_size">
		</ImageView>
	
<!--		
		<LinearLayout
			android:id="@+id/LinearLayoutMainDetails"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">
		</LinearLayout>
-->
	
		
		
		<Button
			android:text="Chat"
			android:id="@+id/ButtonUserDetailsChat"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:minWidth="70sp">
		</Button>
		
	
</LinearLayout>
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/TextViewUserDetailsDateBirthLabel"
		android:text="Date of Birth :"
		android:layout_marginTop="20sp">
	</TextView>
	
	<DatePicker
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/DatePickerUserDetailsDateBirth"
		android:layout_gravity="center_horizontal">
	</DatePicker>
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/TextViewUserDetailsHobbiesLabel"
		android:text="Hobbies :"
		android:layout_marginTop="10sp">
	</TextView>

	<EditText
		android:id="@+id/EditTextUserDetailsHobbies"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:maxLines="3"
		android:scrollbars="vertical">
	</EditText>
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/TextViewUserDetailsHobbies"
		android:text="Hobbies"
		android:visibility="gone">
	</TextView>
	
	<TextView
		android:text="Favorite Music :"
		android:id="@+id/TextViewUserDetailsFavoriteMusicLabel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10sp">
	</TextView>
	
	<EditText
		android:id="@+id/EditTextUserDetailsFavoriteMusic"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:maxLines="3"
		android:scrollbars="vertical">
	</EditText>
	
	<TextView
		android:text="Favorite Music"
		android:id="@+id/TextViewUserDetailsFavoriteMusic"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:visibility="gone">
	</TextView>

	<LinearLayout
		android:id="@+id/LinearLayoutUserDetailsOKCancelButtons"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="20sp">
	
		<Button
			android:text="OK"
			android:id="@+id/ButtonUserDetailsOK"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:minWidth="@dimen/min_width_button">
		</Button>
		
		<Button
			android:text="Cancel"
			android:id="@+id/ButtonUserDetailsCancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:minWidth="@dimen/min_width_button">
		</Button>
	</LinearLayout>

</LinearLayout>
